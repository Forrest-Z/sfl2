Import('env')
lib = env.StaticLibrary('sflutil',
                        ['Ray.cpp',
                         'numeric.cpp',
                         'Frame.cpp',
                         'Line.cpp',
                         'Point.cpp',
                         'Polygon.cpp',
                         'Hull.cpp'])
env.StageLibrary(lib)
